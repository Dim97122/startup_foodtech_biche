    <script>
      $(function(){
      setInterval(function(){
         $(".slideshow ul").animate({marginLeft:-1500},800,function(){
        $(this).css({marginLeft:0}).find("li:last").after($(this).find("li:first"));
         })
      }, 5000);
    });
    </script>
  </body>
